<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/secondary_color</item>

        <!--此属性开启会失去activity切换动画-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"></style>

    <!--自定义progressBar-->
    <style name="Custom.Widget.Holo.ProgressBar.Horizontal" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_horizontal</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

</resources>
